<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- user -->
<mapper namespace="com.ppx.mall.dao.UserDao">
    <!-- This code was generated by TableGo tools, mark 1 begin. -->
    <!-- 字段映射 -->
    <resultMap id="userMap" type="User">
        <id column="account" property="account" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="userName" property="userName" jdbcType="VARCHAR" />
        <result column="avatarSrc" property="avatarSrc" jdbcType="VARCHAR" />
        <result column="address" property="address" jdbcType="VARCHAR" />
        <result column="telephone" property="telephone" jdbcType="VARCHAR" />
        <result column="name" property="name" jdbcType="VARCHAR" />
    </resultMap>
    <!-- This code was generated by TableGo tools, mark 1 end. -->

    <!-- This code was generated by TableGo tools, mark 2 begin. -->
    <!-- 表查询字段 -->
    <sql id="allColumns">
        u.account, u.password, u.userName, u.avatarSrc, u.address, u.telephone, u.name
    </sql>
    <!-- This code was generated by TableGo tools, mark 2 end. -->

    <!-- 查询所有 -->
    <select id="findUserAll" resultMap="userMap">
        SELECT
            <include refid="allColumns" />
        FROM user u
    </select>

    <!-- 根据条件参数查询列表 -->
    <select id="findUserByCondition" resultMap="userMap" parameterType="map">
        SELECT
            <include refid="allColumns" />
        FROM user u WHERE 1 = 1
        <if test="password != null and password != ''">
            AND u.password LIKE CONCAT('%', #{password}, '%')
        </if>
        <if test="userName != null and userName != ''">
            AND u.userName LIKE CONCAT('%', #{userName}, '%')
        </if>
    </select>

    <select id="findUserById" resultType="User" parameterType="String">
        SELECT
        <include refid="allColumns" />
        FROM user u WHERE u.account=#{account}
    </select>

    <!-- 根据主键查询信息 -->
    <select id="findUserByIds" resultMap="userMap" parameterType="list">
        SELECT
            <include refid="allColumns" />
        FROM user u WHERE u.account IN
        <foreach collection="list" index="index" item="account" open="(" separator="," close=")">
            #{account}
        </foreach>
    </select>

    <!-- 新增信息 -->
    <insert id="addUser">
        INSERT INTO user (
            account, password, userName
        ) VALUES (
            #{account},
            #{password},
            #{userName}
        )
    </insert>


    <!-- 修改信息 -->
    <update id="updateUser" parameterType="User">
        UPDATE user
        <set>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="userName != null">
                userName = #{userName},
            </if>
            <if test="avatarSrc != null">
                avatarSrc = #{avatarSrc},
            </if>
            <if test="address != null">
                address = #{address},
            </if>
            <if test="telephone != null">
                telephone = #{telephone},
            </if>
            <if test="name != null">
                name = #{name}
            </if>
        </set>
        WHERE account = #{account}
    </update>

    <!-- 批量修改信息 -->
    <update id="updateUsers" parameterType="list">
        <foreach collection="list" index="index" item="item" separator=";">
            UPDATE user
            <set>
                <if test="item.password != null">
                    password = #{item.password},
                </if>
                <if test="item.name != null">
                    name = #{item.name}
                </if>
            </set>
            WHERE account = #{item.account}
        </foreach>
    </update>

    <!-- 根据主键删除 -->
    <delete id="deleteUserById" parameterType="string">
        DELETE FROM user WHERE account = #{account}
    </delete>

    <!-- 根据主键批量删除 -->
    <delete id="deleteUserByIds" parameterType="list">
        DELETE FROM user WHERE account IN
        <foreach collection="list" index="index" item="account" open="(" separator="," close=")">
            #{account}
        </foreach>
    </delete>
</mapper>