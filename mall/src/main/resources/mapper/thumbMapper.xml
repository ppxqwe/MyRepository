        <result column="commentId" property="commentId" jdbcType="BIGINT" />
    </resultMap>
    <!-- This code was generated by TableGo tools, mark 1 end. -->

    <!-- This code was generated by TableGo tools, mark 2 begin. -->
    <!-- 表查询字段 -->
    <sql id="allColumns">
        t.id, t.userId, t.commentId
    </sql>
    <!-- This code was generated by TableGo tools, mark 2 end. -->

    <!-- 查询所有 -->
    <select id="findThumbAll" resultMap="thumbMap">
        SELECT
            <include refid="allColumns" />
        FROM thumb t
    </select>

    <!-- 根据条件参数查询列表 -->
    <select id="findThumbByCondition" resultMap="thumbMap" parameterType="map">
        SELECT
            <include refid="allColumns" />
        FROM thumb t WHERE 1 = 1
        <if test="userId != null and userId != ''">
            AND t.userId= #{userId}
        </if>
        <if test="commentId != null">
            AND t.commentId = #{commentId}
        </if>
    </select>

    <!-- 根据主键查询信息 -->
    <select id="findThumbByIds" resultMap="thumbMap" parameterType="list">
        SELECT
            <include refid="allColumns" />
        FROM thumb t WHERE t.id IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <!-- 新增信息 -->
    <insert id="addThumb" parameterType="Thumb">
        INSERT INTO thumb (
            id, userId, commentId
        ) VALUES (
            #{id},
            #{userId},
            #{commentId}
        )
    </insert>

    <!-- 批量新增信息 -->
    <insert id="addThumbs" parameterType="list">
        INSERT INTO thumb (
            id, userId, commentId
        ) VALUES
        <foreach collection="list" index="index" item="item" separator=",">
            (
                #{item.id},
                #{item.userId},
                #{item.commentId}
            )
        </foreach>
    </insert>

    <!-- 修改信息 -->
    <update id="updateThumb">
        UPDATE thumb
        <set>
            <if test="userId != null">
                userId = #{userId},
            </if>
            <if test="commentId != null">
                commentId = #{commentId}
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 批量修改信息 -->
    <update id="updateThumbs" parameterType="list">
        <foreach collection="list" index="index" item="item" separator=";">
            UPDATE thumb
            <set>
                <if test="item.userId != null">
                    userId = #{item.userId},
                </if>
                <if test="item.commentId != null">
                    commentId = #{item.commentId}
                </if>
            </set>
            WHERE id = #{item.id}
        </foreach>
    </update>

    <!-- 根据主键删除 -->
    <delete id="deleteThumbById" parameterType="long">
        DELETE FROM thumb WHERE id = #{id}
    </delete>

    <!-- 根据主键批量删除 -->
    <delete id="deleteThumbByIds" parameterType="list">
        DELETE FROM thumb WHERE id IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
