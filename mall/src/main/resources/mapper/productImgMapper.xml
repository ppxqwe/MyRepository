    <!-- 字段映射 -->
    <resultMap id="productImgMap" type="ProductImg">
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="productId" property="productId" jdbcType="BIGINT" />
        <result column="src" property="src" jdbcType="VARCHAR" />
    </resultMap>
    <!-- This code was generated by TableGo tools, mark 1 end. -->

    <!-- This code was generated by TableGo tools, mark 2 begin. -->
    <!-- 表查询字段 -->
    <sql id="allColumns">
        pi.id, pi.productId, pi.src
    </sql>
    <!-- This code was generated by TableGo tools, mark 2 end. -->

    <!-- 查询所有 -->
    <select id="findProductImgAll" resultMap="productImgMap">
        SELECT
            <include refid="allColumns" />
        FROM product_img pi
    </select>

    <!-- 根据主键查询信息 -->
    <select id="findProductImgByIds" resultMap="productImgMap" parameterType="list">
        SELECT
            <include refid="allColumns" />
        FROM product_img pi WHERE pi.productId IN
        <foreach collection="list" index="index" item="productId" open="(" separator="," close=")">
            #{productId}
        </foreach>
    </select>

    <select id="selectImgByProduct" resultMap="productImgMap" parameterType="long">
        select <include refid="allColumns"/> from product_img pi where productId=#{productId}
    </select>

    <!-- 新增信息 -->
    <insert id="addProductImg">
        INSERT INTO product_img (
            productId, src
        ) VALUES (
            #{productId},
            #{src}
        )
    </insert>

    <!-- 批量新增信息 -->
    <insert id="addProductImgs" parameterType="list">
        INSERT INTO product_img (
            productId, src
        ) VALUES
        <foreach collection="list" index="index" item="item" separator=",">
            (
                #{item.productId},
                #{item.src}
            )
        </foreach>
    </insert>

    <!-- 修改信息 -->
    <update id="updateProductImg">
        UPDATE product_img
        <set>
            <if test="src != null">
                src = #{src}
            </if>
        </set>
        WHERE productId = #{productId}
    </update>

    <!-- 批量修改信息 -->
    <update id="updateProductImgs" parameterType="list">
        <foreach collection="list" index="index" item="item" separator=";">
            UPDATE product_img
            <set>
                <if test="item.src != null">
                    src = #{item.src}
                </if>
            </set>
            WHERE productId = #{item.productId}
        </foreach>
    </update>

    <!-- 根据主键删除 -->
    <delete id="deleteProductImgById" parameterType="long">
        DELETE FROM product_img WHERE productId = #{productId}
    </delete>

    <!-- 根据主键批量删除 -->
    <delete id="deleteProductImgByIds" parameterType="list">
        DELETE FROM product_img WHERE productId IN
        <foreach collection="list" index="index" item="productId" open="(" separator="," close=")">
            #{productId}
        </foreach>
    </delete>
