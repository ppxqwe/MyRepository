<!-- slideshow -->
<mapper namespace="com.ppx.mall.dao.SlideshowDao">
    <!-- This code was generated by TableGo tools, mark 1 begin. -->
    <!-- 字段映射 -->
    <resultMap id="slideshowMap" type="Slideshow">
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="productId" property="productId" jdbcType="VARCHAR" />
        <result column="imgSrc" property="imgSrc" jdbcType="VARCHAR" />
    </resultMap>
    <!-- This code was generated by TableGo tools, mark 1 end. -->

    <!-- This code was generated by TableGo tools, mark 2 begin. -->
    <!-- 表查询字段 -->
    <sql id="allColumns">
        s.id, s.productId, s.imgSrc
    </sql>
    <!-- This code was generated by TableGo tools, mark 2 end. -->

    <!-- 查询所有 -->
    <select id="findSlideshowAll" resultMap="slideshowMap">
        SELECT
            <include refid="allColumns" />
        FROM slideshow s
    </select>

    <!-- 根据条件参数查询列表 -->
    <select id="findSlideshowByCondition" resultMap="slideshowMap" parameterType="map">
        SELECT
            <include refid="allColumns" />
        FROM slideshow s WHERE 1 = 1
        <if test="productId != null and productId != ''">
            AND s.productId LIKE CONCAT('%', #{productId}, '%')
        </if>
        <if test="imgSrc != null and imgSrc != ''">
            AND s.imgSrc LIKE CONCAT('%', #{imgSrc}, '%')
        </if>
    </select>

    <!-- 根据主键查询信息 -->
    <select id="findSlideshowByIds" resultMap="slideshowMap" parameterType="list">
        SELECT
            <include refid="allColumns" />
        FROM slideshow s WHERE s.id IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <!-- 新增信息 -->
    <insert id="addSlideshow">
        INSERT INTO slideshow (
            id, productId, imgSrc
        ) VALUES (
            #{id},
            #{productId},
            #{imgSrc}
        )
    </insert>

    <!-- 批量新增信息 -->
    <insert id="addSlideshows" parameterType="list">
        INSERT INTO slideshow (
            id, productId, imgSrc
        ) VALUES
        <foreach collection="list" index="index" item="item" separator=",">
            (
                #{item.id},
                #{item.productId},
                #{item.imgSrc}
            )
        </foreach>
    </insert>

    <!-- 修改信息 -->
    <update id="updateSlideshow">
        UPDATE slideshow
        <set>
            <if test="productId != null">
                productId = #{productId},
            </if>
            <if test="imgSrc != null">
                imgSrc = #{imgSrc}
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 批量修改信息 -->
    <update id="updateSlideshows" parameterType="list">
        <foreach collection="list" index="index" item="item" separator=";">
            UPDATE slideshow
            <set>
                <if test="item.productId != null">
                    productId = #{item.productId},
                </if>
                <if test="item.imgSrc != null">
                    imgSrc = #{item.imgSrc}
                </if>
            </set>
            WHERE id = #{item.id}
        </foreach>
    </update>

    <!-- 根据主键删除 -->
    <delete id="deleteSlideshowById" parameterType="long">
        DELETE FROM slideshow WHERE id = #{id}
    </delete>

    <!-- 根据主键批量删除 -->
    <delete id="deleteSlideshowByIds" parameterType="list">
        DELETE FROM slideshow WHERE id IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
